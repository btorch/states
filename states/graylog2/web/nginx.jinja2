# {{ pillar['message_do_not_modify'] }}

upstream graylog2 {
    server unix:///var/lib/uwsgi/graylog2.sock;
}

server {
{% if ssl|default(False) %}
    listen 443 ssl;
    ssl_certificate /etc/ssl/{{ ssl }}/chained_ca.crt;
    ssl_certificate_key /etc/ssl/{{ ssl }}/server.pem;
    ssl_client_certificate /etc/ssl/{{ pillar['shinken']['ssl'] }}/ca.crt;
    ssl_ciphers RC4:HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
{% endif %}

    listen 80;

    root /usr/local/graylog2-web-interface-{{ version }}/public;

    server_name {% for hostname in hostnames %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};

{% for dir in ('stylesheets', 'javascripts', 'images') %}
    location /{{ dir }}/ {
        expires max;
        autoindex off;
    }
{% endfor %}

    location / {
        gzip off;
        uwsgi_modifier1 7;
        include uwsgi_params;
        uwsgi_pass graylog2;
    }
}
